<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Login">


    <TextView
        android:id="@+id/txtlogin"
        android:layout_width="231dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="78dp"
        android:fontFamily="@font/lobster"
        android:gravity="center"
        android:text="Login!"
        android:textColor="@android:color/background_dark"
        android:textSize="80dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="197dp"
        android:layout_marginEnd="323dp"
        android:text="Email"
        android:textColor="#000000"
        android:textSize="20dp" />
    <EditText
        android:id="@+id/editLoginEmail"
        android:layout_width="359dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/txtlogin"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-66dp"
        android:layout_marginTop="234dp"
        android:background="@color/edittext"
        android:hint="" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editLoginEmail"
        android:layout_alignTop="@+id/editLoginEmail"
        android:layout_marginStart="0dp"
        android:layout_marginTop="52dp"
        android:text="Password"
        android:textColor="#000000"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/editLoginPassword"
        android:layout_width="359dp"
        android:layout_height="50dp"
        android:layout_below="@+id/editLoginEmail"
        android:layout_marginTop="30dp"
        android:layout_alignStart="@+id/editLoginEmail"
        android:background="@color/edittext"
        android:hint="" />


    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="236dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtlogin"
        android:layout_alignParentBottom="true"
        android:layout_gravity="end"
        android:layout_marginStart="3dp"
        android:layout_marginBottom="122dp"
        android:background="@color/rounded_button"
        android:text="Login"
        android:textSize="20dp" />

    <Button
        android:id="@+id/ButtonDaftarDiLogin"
        android:layout_width="236dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="end"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="52dp"
        android:background="@color/rounded_button"
        android:text="Daftar"
        android:textSize="20dp" />


</RelativeLayout>